#!/bin/sh

if [ -e /etc/redhat-release ]; then
    case "$1" in
        0) # This is a yum/dnf remove.
            userdel stork-server >/dev/null || /bin/true
            ;;
        1)  # This is a yum/dnf upgrade.
            # do nothing
            ;;
    esac
elif [ -x "$(command -v busybox)" ]; then
    deluser stork-server >/dev/null || /bin/true
elif [ -e /bin/freebsd-version ]; then
    pw user del stork-server || /bin/true
else
    deluser --system stork-server >/dev/null || /bin/true
fi
